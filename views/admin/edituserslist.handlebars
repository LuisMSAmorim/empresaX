{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar usuário: </h4>
        <form action="/admin/userslist/edit" method="POST">
            <input type="hidden" name="id" value="{{user._id}}">
            <label for="name">Nome: </label>
            <input type="text" name="name" class="form-control" value="{{user.nome}}" required>
            <label for="email" class="mt-4">Email: </label>
            <input type="email" name="email" class="form-control" value="{{user.email}}" required>
            <div  class="form-check">
                <label for="admin" class="form-check-label mt-4">Administrador</label>
                <input type="radio" name="ifadmin" id="admin" value="1" class="form-check-input mt-4">
            </div>
            <div class="form-check">
                <label for="user" class="form-check-label mt-4">Usuário</label>
                <input type="radio" name="ifadmin" id="user" value="0" class="form-check-input mt-4" checked>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Editar</button>
        </form>
    </div>
</div>