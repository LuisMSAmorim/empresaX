{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}
<h3>Novo departamento</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/departamentos/novo" method="POST">
            <label for="name">Nome</label>
            <input class="form-control" type="text" name="name" placeholder="Nome do departamento">
            <label for="slug" class="mt-4">Slug:</label>
            <input class="form-control" type="text" name="slug" placeholder="Slug do departamento">
            <br>
            <button type="submit" class="btn btn-primary">Criar departamento</button>
        </form>
    </div>
</div>